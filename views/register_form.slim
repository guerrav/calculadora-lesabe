.row
    .large-5.columns


        form.new action="/auth/identity/register" method="POST"
        	
        	
            input type="text" placeholder="Username" name= :username
            input type="text" placeholder="Email" name= :email

            input type="password" placeholder="Password" name= :password

            input type="password" placeholder="Password Confirmation" name= :password_confirmation


            input type="submit" class="button tiny radius nuevo" value="Enviar" title="Submit"


    .large-7.columns

        - if @user && @user.errors.any?
            

            - @user.errors.full_messages.each do |msg|

                ul.error
                    li
                        =msg


